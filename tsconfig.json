{
  "compilerOptions" : {
    "lib": ["ES2015", "dom", "esnext"],
    "target": "ES2020",
    "module": "esNext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": true,
    "outDir": "./dist/build"
  },
  "include": [
    "src/**/*.ts"
  ]
}
